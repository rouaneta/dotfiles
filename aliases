# VS code
alias c="code"
alias cr="code -r"

# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias serve="ruby -run -e httpd . -p 8000"  # Or python -m SimpleHTTPServer :)

# Heroku
alias hl="heroku local"

# Projects
alias alph="~/code/alphonse"
alias nest="~/code/nestor"
alias hube="~/code/hub"
alias marv="~/code/marvin"
alias style="~/code/gems/lifen-ruby-style"
alias app="~/code/lifen-app"
alias auth="~/code/auth0/auth0-configuration"
alias conf="~/code/config"

alias calph="code ~/code/alphonse"
alias cnest="code ~/code/nestor"
alias chub="code ~/code/hub"
alias cmarv="code ~/code/marvin"
alias cstyle="code ~/code/gems/lifen-ruby-style"
alias capp="code ~/code/lifen-app"
alias cauth="code ~/code/auth0/auth0-configuration"
alias cconf="code ~/code/config"

alias calphr="code ~/code/alphonse -r"
alias cnestr="code ~/code/nestor -r"
alias chubr="code ~/code/hub -r"
alias cmarvr="code ~/code/marvin -r"
alias cstyler="code ~/code/gems/lifen-ruby-style -r"
alias cappr="code ~/code/lifen-app -r"
alias cauthr="code ~/code/auth0/auth0-configuration -r"
