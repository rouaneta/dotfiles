# VS code

alias c="code"
alias cr="code -r"

# Get External IP / local IPs

alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP

alias serve="ruby -run -e httpd . -p 8000" # Or python -m SimpleHTTPServer :)

# Heroku

alias hl="heroku local"

# Projects

alias alph="~/projects/alphonse"
alias nest="~/projects/nestor"
alias hub="~/projects/hub"
alias marv="~/projects/marvin"
alias style="~/projects/lifen-ruby-style"
alias app="~/projects/lifen-app"
alias auth="~/projects/auth0-configuration"
alias conf="~/projects/config"

alias calph="code ~/projects/alphonse"
alias cnest="code ~/projects/nestor"
alias chub="code ~/projects/hub"
alias cmarv="code ~/projects/marvin"
alias cstyle="code ~/projects/gems/lifen-ruby-style"
alias capp="code ~/projects/lifen-app"
alias cauth="code ~/projects/auth0-configuration"
alias cconf="code ~/projects/config"

# Docker

alias dr="docker run"
alias dc="docker-compose"
alias dcu="docker-compose up"

# Common aliases

alias be="bundle exec"
alias bg="bundle exec guard"
alias bi="bundle install"
alias bu="bundle update"
alias bspec="bundle exec spring rspec"

# Rails

alias ss="spring stop"
alias mig="bundle exec rake db:migrate && bundle exec rake db:test:prepare"
alias dover="OVERCOMMIT_DISABLE=1"
alias rc="bundle exec rails console"
alias bs="bin/start"

# GitHub

alias ghprc="EDITOR=vim gh pr create"
alias ghpro="gh pr view --web"

alias todo="vim ~/Documents/Notes/todo.md"
alias journal="vim ~/Documents/Notes/journal.md"
alias useful="vim ~/Documents/Notes/useful_commands.md"

alias rubo="/usr/local/bin/rubocop-daemon-wrapper/rubocop"

alias clc='fc -ln -1 | pbcopy;'
