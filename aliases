# Docker
alias dr="docker run"
alias dc="docker-compose"
alias dcu="docker-compose up"

# Hub
alias hb="hub browse"
alias hpr="hub pull-request"
alias hprs="hub pr show"

# Common aliases
alias be="bundle exec"
alias bg="bundle exec guard"
alias bi="bundle install"
alias bu="bundle update"

# Rails
alias ss="spring stop"
alias mig="bundle exec rake db:migrate && bundle exec rake db:test:prepare"
alias now="git pull --rebase && bundle install && bundle exec rake db:migrate && bundle exec rake db:test:prepare && git stash"
alias dover="OVERCOMMIT_DISABLE=1"

alias lint="git diff --cached -r --no-commit-id --name-status | grep -E 'A|M' | awk '{print $2}' |  xargs bundle exec rubocop"

alias todo="vim ~/Documents/todo.md"
alias useful="vim ~/Documents/useful_commands.md"

alias rubo="/usr/local/bin/rubocop-daemon-wrapper/rubocop"
